                {% for i in range(1, blocks) %}

                    <section class="tail-fragment">
                        <div class="center-wrapper">
                            {% if i == 1 %}
                                <div class="section-headline">Читайте также</div>
                            {% endif %}
                            <div class="fints-line fints-line_of-3">
                                {% set someCountValue = 1 %}
