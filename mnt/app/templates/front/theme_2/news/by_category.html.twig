                            </div>
                            <div class="fints fints_billet">
                                {% set someCountValue = 1 %}
                                {% for item in news | slice(someCountVal, 2) %}
                                    <a href="{{ path('front.short_news', {
                                        'id': item.id
                                    }) }}" class="fint fint_billet {% if someCountValue == 1 %}hide-on-1000{% endif %}">
                                        <div class="fint__image fint__image_billet">
                                            <img src="{{ generate_preview_link(item.fileName, 'news',  width_news_block, height_news_block ) }}">
