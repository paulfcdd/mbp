                                </div>
                                <div class="fint__content fint__content_billet">
                                    <div class="fint__title fint__title_billet">{{ item.title }}</div>
                                </div>
                            </a>
                            {% set someCountValue = 0 %}
                        {% endfor %}
                    </div>
                </div>
            </section>

            {% set someCountVal = 13 %}
