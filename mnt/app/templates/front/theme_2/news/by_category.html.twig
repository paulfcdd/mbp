                                    </a>
                                    {% set someCountValue = 0 %}
                                {% endfor %}
                                {% set someCountVal = someCountVal + 2 %}

                            </div>
                        </div>
                    </section>


                    <section class="tail-fragment tail-fragment_white decorated-bottom">
                        <div class="center-wrapper">
                            <div class="fints-line fints-line_of-4">
                                {% set someCountValue = 1 %}
                                {% for item in news | slice(someCountVal, 4) %}
                                    <a href="#" class="fint fint_vertical fint_bordered {% if someCountValue == 1 %}hide-on-1000{% elseif someCountValue == 2 %}hide-on-560{% endif %}">
                                        <div class="fint__image fint__image_vertical">
                                            <img src="{{ generate_preview_link(item.fileName, 'news',  width_news_block, height_news_block ) }}">
                                        </div>
                                        <div class="fint__content fint__content_vertical">
                                            <div class="fint__title fint__title_vertical">{{ item.title }}</div>
                                            <div class="fint__post-time fint__post-time_vertical">
                                                <i class="fa fa-calendar-o"></i>
