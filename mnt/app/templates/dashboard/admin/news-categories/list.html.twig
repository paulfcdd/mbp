{% extends 'dashboard/templates/list.html.twig' %}

{% block bulk_actions_checkobx %}{% endblock %}

{% block table_body %}

    {% for news_category in news_categories %}
        <tr role="row" class="odd" {% if news_category.isEnabled == false %}style="background-color: #a7a3a3;"{% endif %}>
            <td>{{ news_category.id }}</td>
            <td>{{ news_category.title }}</td>
            <td>{{ news_category.slug }}</td>
            <td>{{ news_category.news|length }}</td>
            <td style="width: 20%; text-align: center">
                {% block action_buttons %}
                    <div class="btn-group">
                        <a href="{{ path('admin_dashboard.news_categories_edit', {
                            'id': news_category.id
                        }) }}" type="button" class="btn btn-info" title="Редактировать">
                            <i class="far fa-edit"></i>
                        </a>
                    </div>
                {% endblock %}
            </td>
        </tr>
    {% endfor %}
{% endblock %}